<div class="wrapper">  
  <div class="topic-content">
    <% @text.each do |text|%>
      <%if text.name.blank? %>
            <h1>name:名無しさん</h1>
          <%else%>
            <h1>name:<%= text.name%></h1>
          <%end%>
      <h1><%= text.text%></h1>
    <%end%>
  </div>
  
  <div class="topic-content">
    <%= form_for  @comment, url: comments_path, local: true do |f|%>
      <h2>【名前入力】</h2>
      <%= f.text_field :name, class:"name-field"%><br/>
      <h2>【返信入力】】</h2>
      <%= f.text_area :post, class: "text-area"%>
      <%= f.hidden_field :topic_id %>
      <%= f.hidden_field :text_id %>
      <%= f.submit "投稿"%>
    <%end%>
    <%= link_to "コメント一覧へ戻る", topic_path(params[:topic_id])%>
  </div>

  <div class="comment-content">
    <ul class="show-li">
      <% @comments.each do |comment|%>
      <div class="comment-border">
        <li>
          <%if comment.name.blank? %>
            <p>name:名無しさん</p>
          <%else%>
            <p>name:<%= comment.name%></p>
          <%end%>
          <p class="content"><%= simple_format(comment.post)%></p>
        </li>
      </div>
      <%end%>
    </ul>
  </div>
</div>
  
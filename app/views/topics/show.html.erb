<div class="wrapper">
  <div class="topic-content">
    <h1 class="title"><%=@topic.title%></h1>
    
    <%= form_with(model: [@topic,@text], local: true) do |f| %>
      <h2>【名前を入力】</h2>
      <%= f.text_field :name, class:"name-field"%><br />
      <h2>【コメント投稿】</h2>
      <%= f.text_area :text, class: "text-area"%>
      <%= f.submit "投稿"%>
    <% end%>
    <%= link_to "トピック一覧へ戻る",  "/topics" %>
  </div>
  
  <div class="comment-content">
  <ul class="show-li">
    <% @texts.each do |t|%>
    <div class="comment-border">
      <li>
        <span class="created-at"><%= t.created_at%></span><br/>
        <%if t.name.blank? %>
          <p>name:名無しさん</p>
        <%else%>
          <p>name:<%= t.name%></p>
        <%end%>
        <p class="content"><%= simple_format(t.text)%></p>
        <%= link_to "返信", topic_text_path(t.topic_id, t.id) %>
      </li>
    </div>
    <%end%>
  </ul>
  </div>
</div>

